<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/amount_of_money_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_gaps"
        android:layout_marginTop="64dp"
        android:text="@string/amount_of_money"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/five_cent_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/ten_cents_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/count_dinner_text_view"
        app:srcCompat="@drawable/five_cents" />

    <ImageView
        android:id="@+id/ten_cents_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/default_gaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/five_cent_image_view"
        app:layout_constraintTop_toBottomOf="@+id/count_dinner_text_view"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/quarter_dollar_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/default_gaps"
        app:layout_constraintEnd_toStartOf="@+id/dollar_image_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_cent_text_view"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/dollar_image_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/default_gaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/quarter_dollar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cent_text_view"
        app:srcCompat="@drawable/one_dollar" />

    <TextView
        android:id="@+id/count_dinner_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gaps"
        android:textColor="@color/black"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_of_money_text_view"
        tools:text="0" />

    <TextView
        android:id="@+id/five_cent_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_gaps"
        android:layout_marginTop="@dimen/default_gaps"
        android:text="@string/five_cent"
        app:layout_constraintEnd_toEndOf="@+id/five_cent_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/five_cent_image_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ten_cent_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gaps"
        android:layout_marginEnd="@dimen/default_gaps"
        android:text="@string/ten_cent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ten_cents_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ten_cents_image_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/quarter_dollar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_gaps"
        android:layout_marginTop="@dimen/default_gaps"
        android:text="@string/quarter_dollar"
        app:layout_constraintEnd_toEndOf="@+id/quarter_dollar_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quarter_dollar_image_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/dollar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gaps"
        android:layout_marginEnd="@dimen/default_gaps"
        android:text="@string/dollar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dollar_image_view"
        app:layout_constraintTop_toBottomOf="@+id/dollar_image_view"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>